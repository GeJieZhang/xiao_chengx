.v_father {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.v_top {
  width: 100%;
  display: flex;
  flex-direction: row;
  background-color: #24bb24;
  height: auto;
  min-height: 4%;
  z-index: 500;
}

.v_top_block {
  width: 6%;
  height: auto;
  z-index: 123;
  background-color: #cf2121;
  min-height: 4%;
}

.v_top_block_right {
  width: 94%;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: auto;
  min-height: 4%;
  background-color: #491daf;
}

.v_top_text {
  flex: 1;
  text-align: center;
}

.sv_table {
  width: 100%;
  height: auto;
  min-height: 1170rpx;
  background-color: #93bb24;
}

.v_sv_father {
  width: 100%;
  height: 90%;
  display: flex;
  flex-direction: row;
  background-color: #93bb24;
}

.v_left_table {
  height: auto;
  width: 6%;
  display: flex;
  flex-direction: column;
  background-color: #bb247c;
}

.v_right_table {
  display: flex;
  flex-direction: row;
  width: 94%;
  height: auto;
  background-color: #1c631c;
}

.v_left_table_text {
  display: flex;
  width: 100%;
  height: 100rpx;
  font-size: 10pt;
  justify-content: center;
  align-items: center;
}

.v_row {
  display: flex;
  flex-direction: column;
  flex: 1;
  background-color: #f0ec18;
}

.v_column {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: auto;
  min-height: 100rpx;
  background-color: #cc277a;
  font-size: 12pt;
  text-align: center;
  justify-content: center; /**内容水平居中*/
  align-items: center; /**内容垂直居中**/
}
