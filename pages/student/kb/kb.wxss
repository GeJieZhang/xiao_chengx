/**index.wxss**/

.father {
  width: 100%;
  height: 100%;
  background-color: #fff;
}

.flex-item {
  width: 95rpx;
  min-height: 100rpx;
}

.kcb-item {
  position: absolute;
  justify-content: center;
  display: flex;
  align-items: center;
  border-radius: 4px;
}

.smalltext {
  font-size: 8pt;
  color: #fff;
  padding: 8rpx;
}

.top {
  display: flex;
  flex-direction: row;
  background-color: #79ad2a;
  color: #fff;
}

.top_block {
  width: 35rpx;
  height: 55rpx;
  background-color: #79ad2a;
}

.top-text {
  width: 100rpx;
  height: 55rpx;
  font-size: 10pt;
  justify-content: center;
  display: flex;
  align-items: center;
  font-weight: bold;
}

.scroll {
  /* height: 1170rpx; */
  height: 100%;
  z-index: 101;
  position: fixed;
  background-color: #fff;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.left {
  width: 35rpx;
  min-height: 100rpx;
  font-size: 9pt;
  justify-content: center;
  display: flex;
  align-items: center;

}
