<view class="container">
  <wux-toptips id="wux-toptips" />
  <!-- 头部信息 -->
  <view class="userinfo">
    <image class="userinfo-avatar" src="{{ userImage }}" background-size="cover"></image>
    <view class='userinfo-content'>

      <text class='userinfo-name'>{{userName}}</text>




      <text class='userinfo-gray' wx:if="{{userType!='2001'}}">学号：{{userNumber}}</text>
      <text class='userinfo-gray' wx:if="{{userType!='2001'}}">专业：{{userSpecialty}}</text>
      <text class='userinfo-gray' wx:if="{{userType=='2001'}}">账号：{{userNumber}}</text>
      <text class='userinfo-gray' wx:if="{{userType=='2001'}}">类型：服务商</text>
    </view>
  </view>

  <!-- 底部按键 -->

  <view class='item-navigator' bindtap='fk'>
    <image class='item-image' src='../../assets/images/logo/problem.png'></image>
    <text class='item-text'>问题反馈</text>
  </view>


  <view class='item-navigator' bindtap='us'>
    <image class='item-image' src='../../assets/images/logo/us.png'></image>
    <text class='item-text'>关于我们</text>
  </view>


  <view class='item-navigator' bindtap='add_jz' style='margin-top:40rpx;' wx:if="{{userType=='2001'}}">
    <image class='item-image' src='../../assets/images/logo/iv_fb.png'></image>
    <text class='item-text'>发布兼职</text>
  </view>



  <view class='item-navigator' bindtap='user_jz' wx:if="{{userType=='2001'}}">
    <image class='item-image' src='../../assets/images/logo/iv_gl.png'></image>
    <text class='item-text'>兼职管理</text>
  </view>



  <view class='item-navigator' bindtap='jz_sc' style='margin-top:40rpx;'>
    <image class='item-image' src='../../assets/images/logo/iv_sc.png'></image>
    <text class='item-text'>我的收藏</text>
  </view>

  <view class='item-navigator' bindtap='system_msg' style='margin-top:40rpx;'>
    <image class='item-image' src='../../assets/images/logo/iv_xx.png'></image>
    <text class='item-text'>系统消息</text>

    <view class='msg' style='margin-left:15rpx;margin-bottom:30rpx;' wx:if="{{msgCount>0}}">{{msgCount}}

    </view>

  </view>

  <view class='view-l'></view>


  <button class="weui-btn" type="warn" catchtap='out' style='display:{{out}};'>退出登录</button>
  <button class="weui-btn" type="primary" catchtap='login' style='display:{{login}};'>登录</button>
</view>